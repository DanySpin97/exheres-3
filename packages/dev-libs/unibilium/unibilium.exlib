require github [ user=mauke tag=v${PV} ]

SUMMARY="A terminfo parsing library"
DESCRIPTION="
Unibilium is a very basic terminfo library.
It can read and write ncurses-style terminfo files,
and it can interpret terminfo format strings.
It doesn't depend on curses or any other library.
It also doesn't use global variables, so it should be thread-safe.
"

LICENCES="LGPL-3 MIT [[ note = [ tools/*.c ] ]]"
SLOT="2"
MYOPTIONS=""

DEPENDENCIES="
    build:
        dev-lang/perl:* [[ description = [ pod2man is required ] ]]
"

DEFAULT_SRC_COMPILE_PARAMS=( PREFIX=/usr/$(exhost --target) MANDIR=/usr/share/man )
DEFAULT_SRC_INSTALL_PARAMS=( "${DEFAULT_SRC_COMPILE_PARAMS[@]}" )

