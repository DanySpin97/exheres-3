MY_PN="Mono.Zeroconf"
GITHUB_TAG="${MY_PN}-${PV}"

require github [ user=mono ] autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ 1.11 ] ]

SUMMARY="A .NET library for Zero Configuration Networking"
HOMEPAGE="http://www.mono-project.com/Mono.Zeroconf"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

EXJOBS="1"

DEPENDENCIES="
    build+run:
        dev-lang/mono[>=2.0]
    build:
        dev-util/pkg-config
"

src_prepare() {
    default

    edo sed -e "/^GACUTIL/s:lib:${LIBDIR}:g" -i configure.ac
    # autoreconf doesn't work
    edo ./autogen.sh
}

